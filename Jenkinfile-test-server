node {
    stage('code checkout') {
       git 'https://github.com/PRASAD996600/capstone-project-demo.git'
 }
    stage('code Build') {
       sh 'mvn clean package'
    }
    stage('docker containerize') {
     sh 'docker build -t prasad996600/insureme:1.0 .'
     }
    stage('push image to dockerhub') {
      withCredentials([string(credentialsId: 'docker-pwd', variable: 'dockerhubpwd')]) {
    sh "docker login -u prasad996600@gmail.com -p ${dockerhubpwd}"
     sh 'docker push prasad996600/insureme:1.0'
    }
    }
    stage('configuration & deploy') {
    ansiblePlaybook become: true, credentialsId: 'ansible-ssh-key', disableHostKeyChecking: true, installation: 'ansible', inventory: '/etc/ansible/hosts', playbook: 'configure-test-server.yml', vaultTmpPath: ''
    }
}
